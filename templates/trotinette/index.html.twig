{% extends 'baseAdmin.html.twig' %}

{% block title %}Trotinette index{% endblock %}

{% block body %}
    <h1>Trotinette index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdTrot</th>
                <th>Marque</th>
                <th>Energie</th>
                <th>Autonomie</th>
                <th>Prix</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trotinette in trotinettes %}
            <tr>
                <td>{{ trotinette.idTrot }}</td>
                <td>{{ trotinette.marque }}</td>
                <td>{{ trotinette.energie }}</td>
                <td>{{ trotinette.autonomie }}</td>
                <td>{{ trotinette.prix }}</td>
                <td>{{ trotinette.description }}</td>
                <td>
                    <a href="{{ path('app_trotinette_show', {'idTrot': trotinette.idTrot}) }}">show</a>
                    <a href="{{ path('app_trotinette_edit', {'idTrot': trotinette.idTrot}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_trotinette_new') }}">Create new</a>
{% endblock %}
